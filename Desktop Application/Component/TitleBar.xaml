<UserControl x:Class="BaldursGateInworld.Component.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaldursGateInworld"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="399">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="#7F272727">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Label  x:Name="TitleLabel" Content="Inworld - Baldur's Gate III Client" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#FFE7CC91" FontFamily="Aldine721 BT" FontSize="13" Margin="5,0,0,0"/>
        <Button Grid.Column="1" Content="" Style="{StaticResource ExitButtonTemplate}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="40"  Click="CloseButton_Click" BorderBrush="#00707070">
        </Button>

    </Grid>
</UserControl>
